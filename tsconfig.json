{
  "compilerOptions": {
    "target": "es6",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "outDir": "./build",
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@root/*": ["src/*"],
      "@interfaces/*": ["src/ts/interfaces/*"],
      "@models/*": ["src/models/*"],
      "@models": ["src/models/index.ts"],
      "@config/*": ["src/config/*"],
      "@helpers/*": ["src/helpers/*"],
      "@defs_graphql/*": ["src/graphql/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@core/*": ["src/core/*"]
    }
  },
  "exclude": [
    "node_modules",
    "build"
  ] 
}